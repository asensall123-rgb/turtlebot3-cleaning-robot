<launch>
  <!-- Sim time -->
  <param name="use_sim_time" value="true"/>

  <!-- 1️⃣ Gazebo + robot -->
  <include file="$(find aysenaz_package)/launch/gazebo.launch"/>

  <!-- 2️⃣ Navigation (map + AMCL + move_base) -->
  <include file="$(find turtlebot3_navigation)/launch/turtlebot3_navigation.launch">
    <arg name="map_file" value="$(find aysenaz_package)/maps/house_map.yaml"/>
  </include>

  <!-- 3️⃣ Mission Manager -->
  <node pkg="aysenaz_package"
        type="task_manager.py"
        name="task_manager"
        output="screen"
        required="true"/>
</launch>

